import 'package:flutter/material.dart';

void main() => runApp(const MaterialApp(home: AdminDashboardPage()));

class AdminDashboardPage extends StatelessWidget {
  const AdminDashboardPage({super.key});

  @override
  Widget build(BuildContext context) {
    return const Scaffold(
      backgroundColor: Colors.white,
      body: SafeArea(
        child: SingleChildScrollView(
          child: AdminDashboardBody(),
        ),
      ),
    );
  }
}

class AdminDashboardBody extends StatelessWidget {
  const AdminDashboardBody({super.key});

  @override
  Widget build(BuildContext context) {
    return Column(
      crossAxisAlignment: CrossAxisAlignment.center,
      children: <Widget>[
        const SizedBox(height: 40),

        // --- HEADER SECTION ---
        Image.asset(
          'assets/img/COZY_TASK_FULL_LOGO.png',
          height: 130,
          errorBuilder: (context, error, stackTrace) {
            return const Icon(Icons.image, size: 130, color: Colors.grey);
          },
        ),
        const SizedBox(height: 10),
        const Text(
          "ADMIN SIDE",
          style: TextStyle(
            fontSize: 36,
            fontWeight: FontWeight.bold,
            color: Color(0XFF68A3BC),
            fontFamily: 'GillSansMT',
          ),
        ),

        const SizedBox(height: 30),

        // --- MENU CARDS SECTION ---
        
        // 1. Users Card
        DashboardCard(
          title: "USERS",
          imagePath: 'assets/img/User.png',
          description: 'View user details',
          // Define what happens when clicked
          onTap: () {
            Navigator.push(
              context,
              MaterialPageRoute(builder: (context) => const UsersPage()),
            );
          },
        ),

        // 2. Products Card
        DashboardCard(
          title: "PRODUCTS",
          imagePath: 'assets/img/Products.png',
          description: 'Add and modify products',
          // Define what happens when clicked
          onTap: () {
            Navigator.push(
              context,
              MaterialPageRoute(builder: (context) => const ProductsPage()),
            );
          },
        ),
      ],
    );
  }
}

// --- REUSABLE WIDGET ---
class DashboardCard extends StatelessWidget {
  final String title;
  final String imagePath;
  final String description;
  final VoidCallback onTap; // 1. Added a variable to hold the click function

  const DashboardCard({
    super.key,
    required this.title,
    required this.imagePath,
    required this.description,
    required this.onTap, // 2. Require it in the constructor
  });

  @override
  Widget build(BuildContext context) {
    // 3. Wrapped the Container in GestureDetector to detect clicks
    return GestureDetector(
      onTap: onTap, 
      child: Container(
        width: double.infinity,
        margin: const EdgeInsets.symmetric(horizontal: 20, vertical: 15),
        padding: const EdgeInsets.symmetric(vertical: 30, horizontal: 20),
        decoration: BoxDecoration(
          color: const Color(0XFF68A3BC),
          borderRadius: BorderRadius.circular(20),
          boxShadow: [
            BoxShadow(
              color: Colors.grey.withOpacity(0.2),
              spreadRadius: 2,
              blurRadius: 5,
              offset: const Offset(0, 3),
            ),
          ],
        ),
        child: Column(
          children: [
            Image.asset(
              imagePath,
              height: 100,
              errorBuilder: (ctx, err, stack) =>
                  const Icon(Icons.person, size: 80, color: Colors.white),
            ),
            const SizedBox(height: 10),
            Text(
              title,
              textAlign: TextAlign.center,
              style: const TextStyle(
                fontSize: 32,
                fontWeight: FontWeight.bold,
                color: Colors.white,
                fontFamily: 'GillSansMT',
              ),
            ),
            const SizedBox(height: 5),
            Text(
              description,
              textAlign: TextAlign.center,
              style: const TextStyle(
                fontSize: 16,
                color: Colors.white70,
                fontFamily: 'GillSansMT',
              ),
            ),
          ],
        ),
      ),
    );
  }
}

